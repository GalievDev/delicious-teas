{
  "schemaVersion": 1,
  "id": "${modId}",
  "version": "${modVersion}",
  "name": "${modName}",
  "description": "${modDescription}",
  "authors": [
    "GalievDev",
    "Syorito Hatsuki"
  ],
  "contact": {
    "homepage": "https://galievdev.github.io",
    "issues": "https://github.com/GalievDev/delicious-teas/issues",
    "sources": "https://github.com/GalievDev/delicious-teas"
  },
  "license": "MIT Licence",
  "icon": "assets/${modId}/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "dev.galiev.${modId}.DeliciousTeas"
      }
    ]
  },
  "custom": {
    "modmenu": {
      "badges": [],
      "update_checker": true
    },
    "mcb": [
      {
        "name": "GalievDev",
        "labelColor": -1842205,
        "fillColor": -16727343,
        "outlineColor": -16610942
      }
    ]
  },
  "mixins": [
    "${modId}.mixins.json"
  ],
  "depends": {
    "fabric": "*",
    "fabricloader": ">=${loaderVersion}",
    "fabric-language-kotlin": ">=${fabricKotlinVersion}",
    "minecraft": ">=${minecraftVersion}",
    "java": ">=${javaVersion}"
  },
  "recommends": {
    "modmenu-badges-lib": "*"
  }
}